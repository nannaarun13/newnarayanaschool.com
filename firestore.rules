
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Admins Collection ---
    match /admins/{adminId} {
      allow create: if 
        // Allow new pending requests to be created
        (request.resource.data.status == 'pending' &&
        request.resource.data.keys().hasOnly([
          'firstName', 'lastName', 'email', 'phone', 'status', 'requestedAt'
        ]) &&
        request.resource.data.firstName is string && request.resource.data.firstName.size() > 0 &&
        request.resource.data.lastName is string && request.resource.data.lastName.size() > 0 &&
        request.resource.data.email is string && request.resource.data.email.size() > 0 &&
        request.resource.data.phone is string && request.resource.data.phone.size() > 0 &&
        request.resource.data.requestedAt is string) ||
        // Allow a user to create their own migrated admin record
        (request.auth.uid == adminId && request.auth.uid == request.resource.data.uid);
      
      allow read: if request.auth != null;

      allow update: if request.auth != null && (
        // Allow an approved admin to manage other records
        isApprovedAdmin() ||
        // Allow a user to update their own record if their email matches,
        // but prevent them from changing their own status.
        (resource.data.email == request.auth.email && resource.data.status == request.resource.data.status)
      );
      
      allow delete: if request.auth != null && (
        // Allow an approved admin to delete records
        isApprovedAdmin() ||
        // Allow a user to delete their own legacy record during migration
        resource.data.email == request.auth.email
      );
    }

    // --- School Collection ---
    match /school/{docId} {
      allow read: if true;
      allow create: if request.resource.data.status == 'pending' &&
        request.resource.data.keys().hasAll([
          'firstName', 'lastName', 'email', 'phone', 'status', 'requestedAt'
        ]) &&
        request.resource.data.firstName is string && request.resource.data.firstName.size() > 0 &&
        request.resource.data.lastName is string && request.resource.data.lastName.size() > 0 &&
        request.resource.data.email is string && request.resource.data.email.size() > 0 &&
        request.resource.data.phone is string && request.resource.data.phone.size() > 0 &&
        request.resource.data.requestedAt is string;
      allow update, delete: if request.auth != null && isApprovedAdmin();
    }

    // --- Helper Function ---
    // NOTE: This function is the root cause of the problem. It assumes the document ID 
    // for an admin is their authentication UID, but the application uses Firestore's 
    // auto-generated IDs. This function will almost always return false.
    // The migration logic being added to the app will fix this for users as they log in.
    function isApprovedAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.status == 'approved';
    }

    // --- Deny all other documents ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
